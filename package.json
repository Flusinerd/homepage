{
  "name": "homepage",
  "version": "1.0.0",
  "description": "My homepage",
  "main": "index.js",
  "author": "Jan Krueger",
  "license": "MIT",
  "scripts": {
    "build-tailwind": "postcss styles/styles.css -o static/styles/styles.css",
    "compile-typescript": "tsc",
    "watch": "npm-watch"
  },
  "watch": {
    "build-tailwind": {
      "patterns": [
        "templates",
        "styles",
        "themes"
      ],
      "extensions": "html,scss,css,ts"
    },
    "compile-typescript": {
      "patterns": [
        "static",
        "templates"
      ],
      "extensions": "ts"
    }
  },
  "devDependencies": {
    "npm-watch": "^0.11.0",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.4"
  }
}
